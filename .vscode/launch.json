    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug STM32 with OpenOCD",
            "cwd": "${workspaceFolder}",
            "executable": "./bin/executable.elf", //change later (name and path)
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink",
            "device": "STM32L433RC",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32l4x.cfg"
            ],
            "preLaunchCommands": [
                "monitor reset halt"
            ],
            "svdFile": "${workspaceFolder}/STM32L4X.svd", // shows registers - optional
            "preLaunchTask": "Build" // optional
        }
    ]
}
